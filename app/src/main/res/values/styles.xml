
<resources>
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_status</item>
        <item name="colorPrimaryDark">@color/yellow_toolbar</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/butler</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
            <item name="android:windowBackground">@drawable/background_splash</item>
        </style>-->
</resources>