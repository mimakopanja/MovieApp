<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="300dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/four"
    card_view:cardElevation="@dimen/margin_eight"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="top">

        <ImageView
            android:id="@+id/movieItemImage"
            android:layout_gravity="top"
            tools:src="@drawable/big_eyes"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movieItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/title_text_size"
            tools:text="Movie title"
            android:layout_marginStart="@dimen/two"
            android:layout_marginBottom="@dimen/margin_eight"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/movieItemYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/two"
            android:layout_marginBottom="@dimen/two"
            android:textSize="@dimen/year_text_size"
            tools:text="2015"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>