<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="250dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="@dimen/two"
    android:layout_marginEnd="@dimen/two"
    card_view:cardElevation="@dimen/two"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="top">

        <ImageView
            android:id="@+id/movieItemImageSearch"
            android:layout_gravity="top"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movieItemTitleSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="top"
            android:textSize="@dimen/title_text_size"
            tools:text="Movie title"
            android:layout_marginStart="@dimen/two"
            android:layout_marginBottom="@dimen/margin_eight"
            android:ellipsize="end"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBarSearch"
            android:theme="@style/switchBtn"
            android:rating="3.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginStart="@dimen/two"
            android:layout_marginBottom="@dimen/two"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>