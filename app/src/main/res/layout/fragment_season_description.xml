<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/seasonPhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="@dimen/section25"
            android:layout_marginStart="@dimen/margin_eight"
            android:layout_marginEnd="@dimen/margin_eight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/actorPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@tools:sample/avatars"
                android:scaleType="centerCrop"
                android:transitionName="@string/transition"
                android:contentDescription="@string/actor_photo" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/seasonName"
            style="@style/TextAppearance.MaterialComponents.Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sixteen"
            android:textSize="@dimen/desc_text_size"
            android:layout_marginStart="@dimen/margin_sixteen"
            android:layout_marginEnd="@dimen/margin_sixteen"
            app:layout_constraintTop_toBottomOf="@id/seasonPhotoImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            tools:text="Edward Norton"/>

        <TextView
            android:id="@+id/airDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Air Date"
            android:drawablePadding="6dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintTop_toBottomOf="@id/seasonName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/section25"
            android:layout_marginStart="@dimen/margin_sixteen" />


        <TextView
            android:id="@+id/episodeCount"
            tools:text="5 episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six"
            android:layout_marginStart="@dimen/margin_sixteen"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/airDate"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/overviewShowDesc"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="@dimen/desc_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/episodeCount"
            android:layout_marginStart="@dimen/section25"
            android:layout_marginTop="@dimen/section25"
            android:text="@string/overview" />

        <TextView
            android:id="@+id/seasonOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/overviewShowDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/about_text"
            style="@style/TextAppearance.MaterialComponents.Overline"
            android:layout_marginTop="@dimen/six"
            android:layout_marginStart="@dimen/margin_sixteen"
            android:layout_marginEnd="@dimen/margin_sixteen"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>